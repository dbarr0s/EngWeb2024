extends layout

block content
    .w3-card-4 
      header.w3-container.w3-black 
        h1= titulo
      .w3-container 
          form.w3-container(method="POST")
              fieldset
                  legend Metadata
                  label Id
                  input.w3-input.w3-round(type="text" name="_id")
                  label Nome
                  input.w3-input.w3-round(type="text" name="nome")
                  label Idade
                  input.w3-input.w3-round(type="number" name="idade")
                  label Sexo
                  select.w3-select.w3-round(name="sexo")
                      option(value="masculino") Masculino
                      option(value="feminino") Feminino
                      option(value="outro") Outro
                  label Cidade
                  input.w3-input.w3-round(type="text" name="morada.cidade")
                  label Distrito
                  input.w3-input.w3-round(type="text" name="morada.distrito")
                  label Descrição
                  input.w3-input.w3-round(type="text" name="descrição")
                  label Profissão
                  input.w3-input.w3-round(type="text" name="profissao")
                  label Partido Político (Abreviação)
                  input.w3-input.w3-round(type="text" name="partido_politico.party_abbr")
                  label Partido Político (Nome)
                  input.w3-input.w3-round(type="text" name="partido_politico.party_name")
                  label Religião
                  input.w3-input.w3-round(type="text" name="religiao")
                  label Desportos
                  input.w3-input.w3-round(type="text" name="desportos")
                  label Animais
                  input.w3-input.w3-round(type="text" name="animais")
                  label Figuras Públicas PT
                  input.w3-input.w3-round(type="text" name="figura_publica_pt")
                  label Marca de Carro
                  input.w3-input.w3-round(type="text" name="marca_carro")
                  label Destinos Favoritos
                  input.w3-input.w3-round(type="text" name="destinos_favoritos")
                  label Atributos
                  p Fumador:
                  select(name="atributos.fumador")
                    option(value="true") Sim
                    option(value="false") Não

                  p Gosta de cinema:
                  select(name="atributos.gosta_cinema")
                    option(value="true") Sim
                    option(value="false") Não

                  p Gosta de viajar:
                  select(name="atributos.gosta_viajar")
                    option(value="true") Sim
                    option(value="false") Não

                  p Acorda cedo:
                  select(name="atributos.acorda_cedo")
                    option(value="true") Sim
                    option(value="false") Não

                  p Gosta de ler:
                  select(name="atributos.gosta_ler")
                    option(value="true") Sim
                    option(value="false") Não

                  p Gosta de música:
                  select(name="atributos.gosta_musica")
                    option(value="true") Sim
                    option(value="false") Não

                  p Gosta de comer:
                  select(name="atributos.gosta_comer")
                    option(value="true") Sim
                    option(value="false") Não

                  p Gosta de animais estimação:
                  select(name="atributos.gosta_animais_estimacao")
                    option(value="true") Sim
                    option(value="false") Não

                  p Gosta de dançar:
                  select(name="atributos.gosta_dancar")
                    option(value="true") Sim
                    option(value="false") Não
                  label Comida Favorita
                  input.w3-input.w3-round(type="text" name="atributos.comida_favorita")
                  br
                  button.w3-btn.w3-green.w3-mb-2(type="submit") Registar
    footer.w3-container.w3-black 
        a.w3-button.w3-(href="/pessoas") Voltar à lista das pessoas
        h5 Generated by EngWeb2024 in #{data}