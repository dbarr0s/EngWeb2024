extends layout

block content
    .w3-card-4
        header.w3-container.w3-black
            h1= titulo
        .w3-container 
            ul.w3-ul.w3-card-4(style="width:100%")
                li 
                    b Id:  
                    span #{p._id}
                li 
                    b Nome:  
                    span #{p.nome}
                li 
                    b Idade:  
                    span #{p.idade}
                li 
                    b Sexo:  
                    span #{p.sexo}
                li 
                    b Cidade:  
                    span #{p.morada.cidade}
                li 
                    b Distrito:  
                    span #{p.morada.distrito}
                li 
                    b Descrição:  
                    span #{p.descrição}
                li 
                    b Profissão:  
                    span #{p.profissao}
                li 
                    b Partido Político (Abreviação):  
                    span #{p.partido_politico.party_abbr}
                li 
                    b Partido Político (Nome):  
                    span #{p.partido_politico.party_name}
                li 
                    b Religião:  
                    span #{p.religiao}
                li 
                    b Desportos:  
                    span
                        each desporto in p.desportos
                            span= desporto + ', '
                li 
                    b Animais:  
                    span
                        each animal in p.animais
                            span= animal + ', '
                li 
                    b Figuras Públicas PT:  
                    span
                        each figura in p.figura_publica_pt
                            span= figura + ', '
                li 
                    b Marca de Carro:  
                    span #{p.marca_carro}
                li 
                    b Destinos Favoritos:  
                    span
                        each destino in p.destinos_favoritos
                            span= destino + ', '
                li 
                    b Atributos:
                        ul
                            li 
                                b Fumador:
                                span= p.atributos.fumador ? 'Sim' : 'Não'
                            li 
                                b Gosta de Cinema:
                                span= p.atributos.gosta_cinema ? 'Sim' : 'Não'
                            li 
                                b Gosta de Viajar:
                                span= p.atributos.gosta_viajar ? 'Sim' : 'Não'
                            li 
                                b Acorda Cedo:
                                span= p.atributos.acorda_cedo ? 'Sim' : 'Não'
                            li 
                                b Gosta de Ler:
                                span= p.atributos.gosta_ler ? 'Sim' : 'Não'
                            li 
                                b Gosta de Música:
                                span= p.atributos.gosta_musica ? 'Sim' : 'Não'
                            li 
                                b Gosta de Comer:
                                span= p.atributos.gosta_comer ? 'Sim' : 'Não'
                            li 
                                b Gosta de Animais de Estimação:
                                span= p.atributos.gosta_animais_estimacao ? 'Sim' : 'Não'
                            li 
                                b Gosta de Dançar:
                                span= p.atributos.gosta_dancar ? 'Sim' : 'Não'
                            li 
                                b Comida Favorita:
                                span= p.atributos.comida_favorita
    footer.w3-container.w3-black 
        a.w3-button.w3-(href="/pessoas") Voltar à lista das pessoas
        h5 Generated by EngWeb2024 in #{data}