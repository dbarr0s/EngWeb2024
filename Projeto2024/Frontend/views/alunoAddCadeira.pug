extends layout

block content
  header(class="w3-container w3-teal w3-padding-16")
    h1 #{title}

  nav(class="w3-bar w3-light-grey w3-padding-8")

    a(href="/cadeiras" class="w3-bar-item w3-button") Cadeiras

    a(href="/perfil" class="w3-bar-item w3-button") Perfil

    a(href="/perfil/update" class="w3-bar-item w3-button") Editar

    if nivel == 'aluno'
      a(href=`/users/${userID}/cadeiras/adicionar` class="w3-bar-item w3-button") Adicionar Cadeira

    a(href="/logout" class="w3-bar-item w3-button") Logout

  div(class="w3-container w3-margin-top")
    form(action=`/users/${userID}/cadeiras/adicionar` method="post")
      div(class="w3-section")

        label(for="cadeira")
          b Lista de Cadeiras:
        select(name="cadeira" id="cadeira" class="w3-select w3-border")
          each cadeira in cadeiras
            option(value=cadeira._id) #{cadeira.titulo}

      button(type="submit" class="w3-button w3-teal w3-margin-top") Adicionar